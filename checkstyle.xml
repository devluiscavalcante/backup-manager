<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="severity" value="warning"/>  <!-- Warning ao invés de error -->

    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

    <module name="TreeWalker">

        <module name="AvoidStarImport">  <!-- Não permite import * -->
            <property name="excludes" value="
                org.springframework.test.context.junit4.*,
                org.junit.jupiter.api.*,
                org.mockito.ArgumentMatchers.*,
                static org.mockito.Mockito.*
            "/>
        </module>

        <module name="UnusedImports"/>
        <module name="RedundantImport"/>

        <module name="ConstantName">      <!-- CONSTANTES_EM_MAIUSCULO -->
            <property name="format" value="^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$"/>
        </module>

        <module name="LocalVariableName"> <!-- variavelLocal -->
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <module name="MemberName">        <!-- variavelMembro -->
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <module name="MethodName">        <!-- metodoJava() -->
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <module name="ParameterName">     <!-- parametro -->
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <module name="TypeName">          <!-- NomeDaClasse -->
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <module name="MethodLength">      <!-- Métodos não muito longos -->
            <property name="max" value="50"/>
            <property name="tokens" value="METHOD_DEF"/>
        </module>

        <module name="ParameterNumber">   <!-- Não muitos parâmetros -->
            <property name="max" value="7"/>
            <property name="tokens" value="METHOD_DEF"/>
        </module>

        <module name="WhitespaceAround">  <!-- Espaço ao redor de operadores -->
            <property name="allowEmptyConstructors" value="true"/>
            <property name="allowEmptyMethods" value="true"/>
        </module>

        <module name="WhitespaceAfter">   <!-- Espaço depois de vírgula -->
            <property name="tokens" value="COMMA,SEMI"/>
        </module>

    </module>

</module>